<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="ch.uzh.se.se7en.hibernate">
		<description>
            Persistence unit for GIR access to CloudSQL
        </description>

		<class>ch.uzh.se.se7en.shared.model.Country</class>
		<class>ch.uzh.se.se7en.shared.model.Film</class>
		<class>ch.uzh.se.se7en.shared.model.Genre</class>
		<class>ch.uzh.se.se7en.shared.model.Language</class>

		<properties>
			<!-- Basic configuration -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			
			<!-- Configure caching -->
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory" />
			<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			
			<!-- Debug / Logging -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>
</persistence>
